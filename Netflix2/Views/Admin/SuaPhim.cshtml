    }

    .btn {
        background-color: #e50914; /* Màu đỏ của Netflix */
        color: #fff;
        font-weight: bold;
        border: none;
        padding: 10px 20px;
        border-radius: 5px;
        cursor: pointer;
    }

        .btn:hover {
            background-color: #ff3239; /* Màu đỏ đậm khi di chuột qua */
        }

    .text-danger {
        color: #e50914; /* Màu đỏ của Netflix cho các lỗi */
    }
    /* CSS */
    .back-link {
        margin-top: 20px;
    }

        .back-link a {
            color: #e50914; /* Màu đỏ của Netflix cho liên kết */
            text-decoration: none;
            font-weight: bold;
            margin-right: 10px;
        }

            .back-link a:hover {
                text-decoration: underline; /* Hiệu ứng gạch chân khi di chuột qua liên kết */
