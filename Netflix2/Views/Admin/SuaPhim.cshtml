    h2 {
        font-size: 24px;
        font-weight: bold;
        margin-bottom: 20px;
        color: #333; /* Màu chữ đen */
    }

    .form-horizontal {
        background-color: #f5f5f5; /* Màu nền xám nhạt */
        padding: 20px;
        border: 1px solid #ccc; /* Đường viền màu xám */
        border-radius: 5px;
    }

    .form-group {
        margin-bottom: 15px;
        color: black;
    }

    .control-label {
        font-weight: bold;
    }

    .form-control {
