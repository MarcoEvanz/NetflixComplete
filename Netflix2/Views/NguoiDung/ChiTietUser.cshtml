
@{
    ViewBag.Title = "ChiTietUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model Netflix2.Models.KhachHang
<style>
    .bodyChiTiet {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        background-image: url('@Url.Content("~/Content/Background/NBackGround.jpg")');
        background-size: cover;
        background-position: center;
        color: #fff;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
    }

    .Detail-container {
        align-items: center;
    }

    .detail-box {
        width: 300px;
        padding: 20px;
        box-sizing: border-box;
        background-color: rgba(0, 0, 0, 0.7);
        border-radius: 5px;
        text-align: center;
    }

    .headerLogin {
        margin-bottom: 20px;
    }

    .logoLogin {
        font-size: 36px;
        font-weight: 800;
        color: #e50914;
        margin-bottom: 20px;
    }

    .logoLogin {
        font-size: 36px;
        font-weight: 800;
        color: #e50914;
        margin-bottom: 20px;
    }

    .login-buttonLogin {
        background-color: #e50914;
        color: #fff;
        border: none;
        padding: 10px 20px;
        font-size: 18px;
        cursor: pointer;
        border-radius: 5px;
    }

    .login-button:hover {
        background-color: #ff0a16;
    }

    .Detail {
        margin: 10px 0;
        padding: 10px;
        border: none;
        border-radius: 3px;
        background-color: #333;
        color: #fff;
        width: 95%;
    }
    .Detail-form {
        background-color: rgba(0, 0, 0, 0.8);
        border-radius: 5px;
        padding: 20px;
        text-align: center;
    }
    .logout-button {
        padding: 10px;
        border: none;
        border-radius: 3px;
        background-color: #e50914;
        color: white;
        cursor: pointer;
        width: 80%;
    }

        .logout-button:hover {
            background-color: #d10813;
        }
        .logout-button a{
            color:white
        }
</style>
<div class="bodyChiTiet">
    <div class="Detail-container">
        <div class="Detail-form">
            <div class="Detail-form">
                <h1>Thông Tin Chi Tiết Tài Khoản</h1>
                <p class="Detail">Mã KH: @Model.MaKH</p>
                <p class="Detail">Tên Đăng Nhập: @Model.TenDangNhap</p>
                <p class="Detail">Họ Tên Khách Hàng: @Model.HoTenKH</p>
                <p class="Detail">Email: @Model.Email</p>
                <button class="logout-button" type="button">@Html.ActionLink("Đăng Xuất", "Logout", "NguoiDung")</button>
            </div>
        </div>
    </div>
</div>