
@{
    ViewBag.Title = "DangNhap";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .body-login {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        background-image: url('@Url.Content("~/Content/Background/NBackGround.jpg")');
        background-size: cover;
        background-position: center;
        color: #fff;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
    }

    .login-container {
        align-items: center;
    }

    .login-box {
        width: 300px;
        padding: 20px;
        box-sizing: border-box;
        background-color: rgba(0, 0, 0, 0.7);
        border-radius: 5px;
        text-align: center;
    }
    .headerLogin {
        margin-bottom: 20px;
    }
    .logoLogin {
        font-size: 36px;
        font-weight: 800;
        color: #e50914;
        margin-bottom: 20px;
    }
    .logoLogin {
        font-size: 36px;
        font-weight: 800;
        color: #e50914;
        margin-bottom: 20px;
    }
    .inputLogin {
        margin: 10px 0;
        padding: 10px;
        border: none;
        border-radius: 3px;
        background-color: #333;
        color: #fff;
        width: 80%;
    }

    .login-buttonLogin {
        background-color: #e50914;
        color: #fff;
        border: none;
        padding: 10px 20px;
        font-size: 18px;
        cursor: pointer;
        border-radius: 5px;
    }

        .login-button:hover {
            background-color: #ff0a16;
        }

    .sign-up-link {
        color: #b3b3b3;
        text-decoration: none;
        margin-top: 15%;
        display: inline-block;
        text-align:left
    }
    .red-title {
        color: #e50914; /* Màu đỏ */
        font-size: 24px; /* Kích thước phông chữ */
        text-align: center; /* Căn giữa ngang */
        margin-top: 10px; /* Khoảng cách phía trên */
    }
    .imgDangKy {
        margin-top:10px;
        max-width: 100px;
    }
    .login-form {
        background-color: rgba(0, 0, 0, 0.8);
        border-radius: 5px;
        padding: 20px;
        text-align: center;
    }
</style>
<div class="body-login">
    <div class="login-container">
        <div class="login-box">
            <h2 class="red-title">@ViewBag.ThongBao</h2>
            @using (Html.BeginForm("DangNhap", "NguoiDung"))
            {
                <div class="login-form">
                    <div class="logoLogin">Netflix</div>
                    <form>
                        <div>
                            @Html.TextBox("TenDangNhap", null, new
                            {
                                @class = "inputLogin",
                                @id = "TenDangNhap",
                                required = "required",
                                @placeholder = "Tên Đăng Nhập"
                            })
                        </div>
                        <div>
                            @Html.TextBox("MatKhau", null, new
                            {
                                @class = "inputLogin",
                                @id = "MatKhau",
                                type = "password",
                                required = "required",
                                @placeholder = "Mật Khẩu"
                            })
                        </div>
                        <button type="submit" class="login-buttonLogin">Đăng nhập</button>
                    </form>
                    <br />
                    <div style="text-align:right">
                        <a class="sign-up-link">@Html.ActionLink("Tạo Tài Khoản Mới", "DangKy", "NguoiDung")</a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>