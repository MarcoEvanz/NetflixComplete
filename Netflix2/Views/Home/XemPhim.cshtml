
@{
    ViewBag.Title = "XemPhim";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model Netflix2.Models.Phim
<style>
        .bodyXemPhim {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        background-color: #000;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
    }

    .video-container {
        position: relative;
        width: 99.5%;
        height: 99.5%
    }

    .videoPlay {
        width: 100%;
        height:100%
    }

    #fullscreenButton {
        position: absolute;
        bottom: 10px;
        right: 10px;
        background-color: transparent;
        color: #fff;
        border: none;
        padding: 20px 20px;
        cursor: pointer;
        transform: none; /* Đặt transform về giá trị mặc định */
    }
</style>
<div class="bodyXemPhim">
    <div class="video-container">
        <iframe class="videoPlay" src="@Model.URLPhim" allow="autoplay" id="video"></iframe>
        <button id="fullscreenButton"></button>
    </div>
    <script src="~/Content/PhimJava/PhongTo.js"></script>
</div>